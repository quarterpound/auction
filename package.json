{
  "name": "auction-bun",
  "module": "index.ts",
  "type": "module",
  "scripts": {
    "prebuild": "bunx prisma generate",
    "dev:server": "bun --watch run apps/server/index.ts",
    "dev:web-client": "cd apps/web-client && bun dev",
    "build": "bun run build:web-client && bun run build:server",
    "build:web-client": "cd apps/web-client && bun run build",
    "build:server": "bun build apps/server/index.ts --compile --outfile ./out/server/server",
    "start:all": "bunx prisma migrate deploy && bunx prisma db seed && bunx concurrently \"./out/server/server\" \"bunx next start ./out/web-client\""
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "bun-types": "latest",
    "concurrently": "^9.0.1",
    "prisma": "5.19.1"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@prisma/client": "5.19.1",
    "@trpc/client": "next",
    "@trpc/server": "next",
    "bcrypt": "^5.1.1",
    "cookies-next": "^4.2.1",
    "dayjs": "^1.11.13",
    "dotenv": "^16.4.5",
    "fastest-validator": "^1.19.0",
    "format-money-js": "^1.6.3",
    "hono": "^4.5.11",
    "react-markdown": "^9.0.1",
    "react-number-format": "^5.4.2",
    "redis": "^4.7.0",
    "sharp": "^0.33.5",
    "superjson": "^2.2.1",
    "zod": "^3.23.8"
  },
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "prisma": {
    "seed": "bun prisma/seed.ts"
  }
}
